# Chaos-Proxy Environment Configuration
# Copy this file to .env and fill in your values

# Proxy Settings
PORT=8080
TARGET_URL=http://your-backend-service:8000
APP_ENV=development  # Set to 'production' for production mode

# Redis Settings
REDIS_ADDR=localhost:6379
REDIS_PASSWORD=your_secure_password_here

# Dashboard Settings (for /dashboard)
DASHBOARD_USER=admin
DASHBOARD_PASSWORD=your_dashboard_password
REDIS_URL=redis://localhost:6379
CORS_ORIGIN=http://localhost:3000

# Alerting
WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Canary Routing (Split Traffic)
CANARY_URL=http://beta-service:8000
CANARY_WEIGHT=0 # Percentage 0-100

# Security (Chaos)
SECURITY_FUZZING_ENABLED=true

# Multi-Region Simulation
# Options: us-east-1, eu-west-1, ap-northeast-1, sa-east-1
SIMULATE_REGION=

# Persistence (Smart Retry)
RETRY_COUNT=3
RETRY_DELAY=200
